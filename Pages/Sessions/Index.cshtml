@page
@model Reservations.Pages.Sessions.IndexModel

<h2>Sessions</h2>

<form method="post">
    <div>
        <label>Title</label>
        <input asp-for="NewSession.Title" />
    </div>
    <div>
        <label>Start</label>
        <input asp-for="NewSession.Start" type="datetime-local" />
    </div>
    <div>
        <label>End</label>
        <input asp-for="NewSession.End" type="datetime-local" />
    </div>
    <div>
        <label>Available Slots</label>
        <input asp-for="NewSession.AvailableSlots" />
    </div>
    <button type="submit">Create</button>
</form>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Start</th>
            <th>End</th>
            <th>Slots</th>
        </tr>
    </thead>
    <tbody>
    @foreach(var s in Model.Sessions)
    {
        <tr>
            <td>@s.Title</td>
            <td>@s.Start.ToLocalTime()</td>
            <td>@s.End.ToLocalTime()</td>
            <td>@s.AvailableSlots</td>
        </tr>
    }
    </tbody>
</table>
