@{
    ViewData["Title"] = "Logowanie";
}

<div class="page-shell">
    <div class="panel" style="max-width:520px; margin:24px auto;">
        <h2>Logowanie</h2>

        <form asp-action="Login" method="post">
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label class="form-label">Nazwa u¿ytkownika</label>
                <input name="username" class="form-control" placeholder="Nazwa u¿ytkownika" />
            </div>
            <div class="mb-3">
                <label class="form-label">Has³o</label>
                <input name="password" type="password" class="form-control" placeholder="Has³o" />
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-accent">Zaloguj siê</button>
                <a class="btn btn-outline-light" asp-controller="Account" asp-action="Register">Rejestracja</a>
            </div>
        </form>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="error" style="margin-top:12px;">
                <ul class="mb-0">
                    @foreach (var v in ViewData.ModelState.Values.SelectMany(x => x.Errors))
                    {
                        <li>@v.ErrorMessage</li>
                    }
                </ul>
            </div>
        }
    </div>
</div>
