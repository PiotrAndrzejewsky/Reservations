@model Reservations.Controllers.SessionsController.IndexViewModel

<form asp-action="Create" method="post" class="session-form">
    @Html.AntiForgeryToken()
    <div class="field">
        <label asp-for="NewSession.Title">Title</label>
        <input asp-for="NewSession.Title" />
    </div>
    <div class="field">
        <label asp-for="NewSession.Start">Start</label>
        <input asp-for="NewSession.Start" type="datetime-local" />
    </div>
    <div class="field">
        <label asp-for="NewSession.End">End</label>
        <input asp-for="NewSession.End" type="datetime-local" />
    </div>
    <div class="field">
        <label asp-for="NewSession.AvailableSlots">Slots</label>
        <input asp-for="NewSession.AvailableSlots" type="number" min="1" />
    </div>
    <div class="field">
        <button class="btn" type="submit">Create</button>
    </div>
</form>
